<h1>アニメーション</h1>
<p><%= link_to "動画", videos_path, class: "btn btn-info" %></p>
<p><%= link_to "イベント", events_path, class: "btn btn-info" %></p>
<% if user_signed_in? %>
  <%= current_user.email %>
<% end %>

<%= link_to 'Google+', user_google_omniauth_authorize_path, class:"Button-style" %>
<%= link_to 'Facebook+', user_facebook_omniauth_authorize_path, class:"Button-style" %>
<fb:login-button 
  scope="public_profile,email"
  onlogin="checkLoginState();">
</fb:login-button>


<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '{your-app-id}',
      cookie     : true,
      xfbml      : true,
      version    : '{api-version}'
    });
      
    FB.AppEvents.logPageView();   
      
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

